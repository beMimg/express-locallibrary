extends layout

block content

  h1 #{title}: #{book_to_delete.title}
  p= book_to_delete.summary

  p Do you really want to delete this book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value= book_to_delete._id )

      button.btn.btn-primary(type='submit') Delete
